@model PhoneBook.Models.HelperModel.ContactCreateModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="DeletePOST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Contact.Id" />
            <div class="form-group">
                <label asp-for="@Model.Contact.Name" class="control-label"></label>
                <input disabled asp-for="@Model.Contact.Name" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="@Model.Contact.Surname" class="control-label"></label>
                <input disabled asp-for="@Model.Contact.Surname" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="@Model.Contact.Email" class="control-label"></label>
                <input disabled asp-for="@Model.Contact.Email" class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="@Model.Contact.PhoneNumber" class="control-label"></label>
                <input disabled asp-for="@Model.Contact.PhoneNumber" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="@Model.Contact.CountryCode" class="control-label"></label>
                <select disabled id="lstCountry" asp-for="@Model.Contact.CountryCode" class="form-control" asp-items="@Model.Countries"></select>
                
            </div>
            <div class="form-group">
                <label asp-for="@Model.Contact.CityCode" class="control-label"></label>
                <select disabled id="lstCity" asp-for="@Model.Contact.CityCode" class="form-control" asp-items="@Model.Cities"></select>
                
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    

}
